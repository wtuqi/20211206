<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My asp.net application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Community", "Index", "Achievements", new { area = "" }, new { @class = "navbar-brand" })
            </div>
          
            <div class="navbar-collapse collapse" id="Prindex">
                <ul class="nav navbar-nav">
                    @* <li>@Html.ActionLink("My Achievement", "Create", "Achievements")</li>*@
                    @*<li>@Html.ActionLink("ADD Prizes", "Create", "prizes")</li>*@

                    <li>@Html.ActionLink("Integral", "index", "prizes")</li>
                    <li>@Html.ActionLink("Gift List", "Details", "prizes", new { id = 0 }, null)</li>
                    <li>@Html.ActionLink("My Favorite", "index", "WantLists", new { id = 0 }, null)</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content" height:1200;">
        
        <hr />
        <div class="panel panel-success" style="height:800px">
            <div class="panel-heading">
                <h3 class="panel-title">&nbsp;</h3>
            </div>
            <div class="panel-body">
                @RenderBody()
            </div>
        </div>
        <div class="panel panel-success">
            <div class="panel-body">
                <p>&copy; @DateTime.Now.Year - My community app</p>
            </div>
        </div>
   
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
