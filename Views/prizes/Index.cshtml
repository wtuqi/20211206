@model IEnumerable<Integral_exchange.Models.prize>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Prizes</h3>

<p>
    <a href="@Url.Action("Create", new { F=2 })" class="label label-danger" style="font-size:13px"> Create New <span class="glyphicon glyphicon-plus"></span></a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
