            <a href="@Url.Action("Edit", new { id = item.ProductID })" class="label label-primary"> &nbsp; Edit &nbsp; </a>
            @*<a href="@Url.Action("Details", new { id = item.ID })" class="label label-info"> Details </a>*@
            <a href="@Url.Action("Delete", new { id = item.ProductID })" class="label label-danger"> Delete </a>
